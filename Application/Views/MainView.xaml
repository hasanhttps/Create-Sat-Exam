                </Frame>
            </TabItem>

            <TabItem Header="Edit Exam" Width="150">
                <Frame x:Name="EditExamFrame" NavigationUIVisibility="Hidden">

                </Frame>
            </TabItem>

            <TabItem Header="Statistics" Width="150">
