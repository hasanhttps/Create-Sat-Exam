        <TabControl HorizontalContentAlignment="Left">

            <TabItem Header="Create Exam" Width="150">
                <Frame x:Name="CreateExamFrame" NavigationUIVisibility="Hidden">
                    
                </Frame>
            </TabItem>

            <TabItem Header="Exams" Width="150">
