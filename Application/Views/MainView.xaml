        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application.Views"
        mc:Ignorable="d"
        Icon="\Static Files\Images\quiz.ico"
        Title="Create Sat Exam" Height="1080" Width="1920" WindowState="Maximized">
